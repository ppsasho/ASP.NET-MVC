@model MovieViewModel
<ul class="list-group">
    <li class="list-group-item list-group-item-dark">Title: @Model.Title</li>
    <li class="list-group-item list-group-item-info">Genre: @Model.Genre</li>
    <li class="list-group-item list-group-item-info">Language: @Model.Language</li>
    <li class="list-group-item list-group-item-info">Release date: @Model.ReleaseDate.ToString("yyyy-MM-dd")</li>
    <li class="list-group-item list-group-item-info">Length: @Model.Length</li>
    <li class="list-group-item list-group-item-warning">Age restriction: @Model.AgeRestriction</li>
    @{
        if(@Model.IsAvailable()){
        <li class="list-group-item list-group-item-info">Quantity: @Model.Quantity</li>
    } else {
        <li class="list-group-item list-group-item-danger">Quantity: @Model.Quantity</li>
    }
    }
</ul>
<br></br>
<a asp-action="ViewMovies" asp-controller="User" class="btn btn-primary">Go back</a>
